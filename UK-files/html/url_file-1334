(function($) {
  $('body').on('AdblockNotDetected', function() {
    var adblock_cookie = window.helper.getCookie('adblock_detected');
if (adblock_cookie) {
  $('.adblock-confirm.adblock-modal').css('display', 'block').appendTo('body');
