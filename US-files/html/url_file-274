          .trb_sc{font-family:trb_Icons;font-size:22px;margin-bottom:5px;clear:left}.trb_embed_related .trb_sc{display:none}.trb_sc_item{cursor:pointer;display:inline-block;padding:9px;height:22px;width:22px;-webkit-font-smoothing:antialiased;-moz-osx-font-smoothing:grayscale}.trb_sc_item[data-sc-t=twitter]{margin:0 2px}.trb_sc_item[data-sc-t=email]{margin:0 5px}.trb_sc_item:first-child{margin-left:-12px}.trb_sc_item[data-sc-t=email]{display:none}@media (min-width:700px){.trb_sc_item[data-sc-t=email]{display:inline-block}[data-content-mobile] .trb_sc_item[data-sc-t=email]{display:none}}          .trb_embed[data-content-type=pullquote]{width:100%;margin:10px 10px 0 0;font-family:Belizio,Georgia,'Droid Serif',serif;font-weight:700;overflow:visible}[data-content-type=pullquote]{clear:both;float:none;width:100%;text-align:center}.trb_pullquote_text:after{display:none}.trb_pullquote_text:before{margin-bottom:10px;font-size:52px;display:block;line-height:4px;content:'\201C'}.trb_pullquote_text{padding:19px 0 0;margin-bottom:5px;font-size:28px;line-height:35px;display:block;word-wrap:break-word}.trb_embed_media .trb_pullquote_credit{font-size:14px;display:inline;padding-top:7px;font-family:Arial,sans-serif;color:#999;font-weight:400}.trb_ar_shpq{font-family:trb_Icons;font-size:22px;margin-top:22px;margin-bottom:22px}.trb_ar_shpq_item{cursor:pointer;height:22px;margin:0 7px;padding:9px;width:22px}@media screen and (min-width:420px){.trb_embed[data-content-type=pullquote]{width:100%;margin:10px 40px 0 0}}
