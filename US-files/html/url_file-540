      .trb_nls_h,.trb_nls_hs{font:700 18px Belizio,Georgia,'Droid Serif',serif}.trb_nls_e,.trb_nls_s{-webkit-appearance:none}.trb_nls_c,.trb_nls_e,.trb_nls_s{box-sizing:border-box}.trb_nls_c{background-color:#E0E0E0;border-radius:3px;margin:20px 0 29px;padding:20px 20px 18px;clear:left}.trb_nls_h{color:#000;margin:0 20px 15px 0}.trb_nls_hs{color:#000;margin:0 20px 5px 0}.trb_nls_h:after{content:attr(data-nls-header)}.trb_nls_w{background:url(http://www.trbas.com/jive/prod/common/images/newsletter_Icon.svg)left center no-repeat;background-size:58px 58px;display:table-cell;padding:17px 0 17px 76px}.trb_nls_captcha{margin:10px 0 7px}.trb_nls_captcha[data-state=nls_disabled]{display:none}.trb_nls_p{display:inline-block;font:10px Arial,sans-serif;color:#8a8a8a;margin:10px 0 0 2px;text-decoration:none}.trb_nls_p:hover{text-decoration:underline}.trb_nls_a{font:12px Georgia,'Droid Serif',serif;color:#4591B8;text-decoration:none}.trb_nls_a:hover{text-decoration:underline}.trb_nls_r{color:#D0021B;font:10px Arial,sans-serif;margin:8px 0 5px 2px}.trb_nls_s{background-color:#ccc;border:0;color:#999;font:700 10px Arial,sans-serif;padding:8px 8px 7px;margin-left:8px;cursor:pointer;border-radius:3px;text-transform:uppercase;max-width:160px;height:30px}.trb_nls_e:valid~.trb_nls_s{background-color:#4591B8;color:#FFF}.trb_nls_e:valid~.trb_nls_s:hover{background-color:#3b7ea4}.trb_nls_e{width:calc(100% - 120px);background-color:#fff;border:1px solid #ccc;color:#666;font:12px Arial,sans-serif;padding:7px;display:inline-block;height:30px;margin-bottom:7px;outline:0;box-shadow:none}@media screen and (min-width:520px){.trb_nls_e{width:280px}}          .trb_bnn{contain:content;position:fixed;bottom:0;right:0;width:100%;background-color:#294F70;z-index:10023;display:table;-webkit-font-smoothing:antialiased;-moz-osx-font-smoothing:grayscale}[data-bnn-closed] .trb_bnn{display:none}.trb_bnn[data-state~=bnn_closed]{bottom:-1000px;transition:bottom 1s}.trb_bnn_h{position:relative;background-color:#1E1E1E;color:#FFF;text-transform:uppercase;padding:9px 5px 5px 10px;width:80px;display:table-cell;table-layout:fixed;vertical-align:top;letter-spacing:1px}.trb_bnn_h:before{content:attr(data-bnn-title);display:block;font-family:Belizio,Georgia,'Droid Serif',serif;font-weight:700;font-weight:700;font-size:11px;line-height:14px}.trb_bnn_h:after{border:solid transparent;content:'';position:absolute;border-left-color:#1E1E1E;border-width:10px 0 10px 10px;right:-8px;top:calc(50% - 10px)}.trb_bnn_h_s{display:none}.trb_bnn_i{padding:6px 40px 6px 20px;font:700 12px/16px Arial,sans-serif;min-height:48px}.trb_bnn_i_t{color:#FFF;text-decoration:none}a.trb_bnn_i_t:hover{text-decoration:underline}.trb_bnn_c{font:13px trb_Icons;color:#99B1BE;position:absolute;padding:5px;top:9px;right:8px;text-decoration:none}.trb_bnn_c:hover{color:#CCC}.trb_bnn_c:after{content:'\00E4'}@media (min-width:420px){.trb_bnn_h{width:130px}}@media (min-width:700px){.trb_bnn{width:580px}.trb_bnn_h{padding:7px 10px 8px 12px;width:150px}.trb_bnn_h:before{line-height:normal;font-size:14px;letter-spacing:normal}.trb_bnn_h_s{color:#348DA0;display:inline-block;text-decoration:none;font:700 10px Georgia,'Droid Serif',serif;padding-top:6px;margin-right:4px}.trb_bnn_h_s:hover{color:#7DB2CC}.trb_bnn_i{padding:8px 50px 8px 20px;font-size:14px}}@media (min-width:1296px){html:not([data-adloader-oop-type~=reskin]) .trb_bnn{left:calc(50% - -60px)}}
