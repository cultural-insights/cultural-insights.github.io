            <script>window.magnum.writeLogo('small', 'https://a1.nyt.com/assets/article/20161104-095752/images/foundation/logos/', 'opinion', 'masthead-theme-standard', 'standard', 'branding-heading-link', 'article');</script>
        </div><!-- close branding -->
                <div class="story-meta">
            <h6 class="kicker"><span class="kicker-label"><a href="http://www.nytimes.com/section/opinion/campaign-stops">The Opinion Pages</a></span><span class="pipe">|</span>Donald Trump’s Real Message on Race</h6>
        </div><!-- close story-meta -->
