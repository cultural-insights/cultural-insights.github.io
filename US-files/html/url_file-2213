<script>'use strict';document.addEventListener("DOMContentLoaded",function(){var MAX=3;var NUMBERS=['zero','one','two','three','four','five','six','seven','eight','nine'];var main=document.getElementById('main');var form=document.getElementById('nytint-callout-form');var related=document.getElementById('related-coverage');var submitBtn=document.querySelector('input.nytint-submitresponses');var statusMsg=document.querySelector('footer p.status-message');var footer=document.querySelector('footer.questions-form-footer');var footerContainer=document.querySelector('.nytint-formacist-freeform');var fieldset=form.querySelector('fieldset');var shuffleElements=function shuffleElements(parent){var i=parent.children.length,n=void 0;while(i){n=Math.floor(Math.random()*i);i--;parent.children[i].className=parent.children[i].className.replace('first','');if(i!=n){var c1=parent.children[i];parent.insertBefore(parent.children[n],c1);parent.insertBefore(c1,parent.children[n]);}}};var updateStatus=function updateStatus(){var n=arguments.length<=0||arguments[0]===undefined?0:arguments[0];var data=form.dataset;if(n!=data.checked){var str=statusMsg.dataset;if(!n){data.status='disabled';statusMsg.innerHTML=str.msgDisabled;}else if(n<MAX){data.status='enabled';statusMsg.innerHTML=str.msgEnabled.replace('{{n}}',n).replace('{{m}}',NUMBERS[MAX-n]);fieldset.className=fieldset.className.replace('nytint-validation-warning','');}else{data.status='ready';statusMsg.innerHTML=str.msgReady;fieldset.className=fieldset.className.replace('nytint-validation-warning','');}}};var onScroll=function onScroll(){var e=arguments.length<=0||arguments[0]===undefined?null:arguments[0];var h=window.innerHeight;var formTop=form.getBoundingClientRect().top;var footerTop=footerContainer.getBoundingClientRect().top;var footerHeight=footer.getBoundingClientRect().height;var isFixed=/\s+fixed/.test(footer.className);if(h/2>formTop&&h-footerHeight<footerTop){if(!isFixed)footer.className+=' fixed';}else{if(isFixed)footer.className=footer.className.replace(/\s+fixed/,'');}};var onClick=function onClick(e){if(e.target.type==='checkbox'){updateStatus(form.querySelectorAll('input[type=checkbox]:checked').length);}};var getAd=function getAd(id){var classes=arguments.length<=1||arguments[1]===undefined?'top-ad':arguments[1];var d=document.createElement('div');d.className='ad '+classes;d.id=id;return d;};if(!/page/.test(main.parentNode.className))main.parentNode.className+=' page';fieldset.removeChild(fieldset.children[0]);shuffleElements(fieldset);footer.querySelector('.content').appendChild(submitBtn);window.addEventListener('scroll',onScroll);onScroll();form.addEventListener('click',onClick);updateStatus();main.parentNode.insertBefore(getAd('TopAd'),main);related.parentNode.insertBefore(getAd('TopAd2','articlebig'),related);});</script>
